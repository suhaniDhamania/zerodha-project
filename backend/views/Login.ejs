<% layout('Bolierplate.ejs') %>



<h3 class="text-center">Login in Zerodha</h3>
<h2>You need to loged in!</h2>
<form method="POST" action="http://localhost:8080/login">
  <div class="mb-3">
    <label for="username" class="form-label">Username:</label>
    <input name="username" type="text" class="form-control" id="username" placeholder="Enter username" required>
  </div>
  <div class="mb-3">
    <label for="password" class="form-label">Password:</label>
    <input name="password" type="password" class="form-control" id="password" placeholder="Enter password" required>
  </div>
  <button type="submit" class="btn btn-primary mt-2 p-2" style="width:10rem">Login</button>
</form>
